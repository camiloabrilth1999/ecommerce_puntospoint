              "path": ["api", "v1", "analytics", "purchases"],
              "query": [
                {
                  "key": "administrator_id",
                  "value": "1",
                  "description": "ID del administrador"
                }
              ]
            },
            "description": "Obtener compras de productos creados por un administrador específico"
          }
        },
        {
          "name": "Purchases by Granularity - Hour",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/analytics/purchases_by_granularity?granularity=hour&start_date=2025-01-15&end_date=2025-01-15",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "analytics", "purchases_by_granularity"],
              "query": [
                {
                  "key": "granularity",
                  "value": "hour",
